	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": false,
		"target": "es2017",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"strict": true
	},
	"include": [
		"./src/**/*.ts",
		"./tests/**/*.ts"
	]
}
